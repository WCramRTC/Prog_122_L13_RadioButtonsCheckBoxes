                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button
            x:Name="btnReceipt"
            Content="Display Receipt"
            Canvas.Left="64"
            Canvas.Top="356"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="196" />
        <CheckBox
            Content="Mushrooms"
            Canvas.Left="64"
            Canvas.Top="81"
            IsChecked="False"
            Width="124"
            HorizontalAlignment="Center"
            VerticalAlignment="Top" />
        <CheckBox
            Content="Sausage"
            Canvas.Left="64"
            Canvas.Top="117"
            IsChecked="False"
            Width="124"
            HorizontalAlignment="Center"
            VerticalAlignment="Top" />

    </Canvas>
</Window>
